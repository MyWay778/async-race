{ 
    "env": {
        "browser": true
        // "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "airbnb-base",
        "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "prettier"
    ],
    "rules": {
        // "linebreak-style": 0
        "prettier/prettier": "error"
    },
    "ignorePatterns": ["webpack.config.js", "dist"]
}
