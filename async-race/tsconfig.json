{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "lib": ["ES2020.Promise", "DOM"],
    "module": "es6",
    "target": "es5",
    "sourceMap": true,
    "removeComments": true,
    "rootDir": ".",
    "baseUrl": "src",
    "paths": {
      "@view/*": ["view/*"],
      "@store/*": ["store/*"],
      "@controller/*": ["controller/*"],
    }
  },
  "include": ["src/**/*.ts", "src/**/*.js", ".eslintrc.js"]
}
